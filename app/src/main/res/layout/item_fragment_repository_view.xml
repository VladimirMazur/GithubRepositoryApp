<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_middle">

    <TextView
        android:id="@+id/txtRepositoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_large"
        android:text=""/>

    <TextView
        android:id="@+id/txtRepositoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_middle"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <include layout="@layout/content_item_star_view"/>

        <include layout="@layout/content_item_fork_view"/>

        <include layout="@layout/content_item_issue_view"/>

    </LinearLayout>

</LinearLayout>